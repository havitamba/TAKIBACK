{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Enables ESM imports
    "moduleResolution": "node",
    "outDir": "dist", // Output directory after build
    "rootDir": "", // Source files location
    "strict": true,
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
